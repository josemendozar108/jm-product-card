{
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "url": "https://github.com/josemendozar108/jm-product-card",
    "type": "git"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --watch",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "jm-product-card",
  "author": "Jose Mendoza",
  "module": "dist/jm-product-card.esm.js",
  "size-limit": [
    {
      "path": "dist/jm-product-card.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/jm-product-card.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "@rollup/plugin-image": "^3.0.3",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/react": "17",
    "@types/react-dom": "17",
    "babel-jest": "^29.7.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "react": "^17",
    "react-dom": "^17",
    "react-test-renderer": "17",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^11.1.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  },
  "resolutions": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@types/react-test-renderer": "^19.0.0",
    "postcss": "^8.5.1"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "keywords": [
    "product",
    "card",
    "jose",
    "mendoza"
  ]
